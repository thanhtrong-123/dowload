        android:id="@+id/tvsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sl"
        android:layout_weight="2"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btnCT"
        android:layout_width="wrap_content"
